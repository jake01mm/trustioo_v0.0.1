# =================================================================
# 应用程序配置
# =================================================================

# 应用名称
APP_NAME=trusioo_api
# 应用版本
APP_VERSION=v0.0.1
# 运行环境 (development, staging, production)
APP_ENV=development
# 服务器地址
APP_HOST=0.0.0.0
# 服务器端口
APP_PORT=8080
# 是否启用调试模式
DEBUG=true

# =================================================================
# 数据库配置 (PostgreSQL)
# =================================================================

# PostgreSQL 主机地址
DB_HOST=localhost
# PostgreSQL 端口
DB_PORT=5432
# 数据库用户名
DB_USER=postgres
# 数据库密码
DB_PASSWORD=password
# 数据库名称
DB_NAME=trusioo_api
# SSL 模式 (disable, require, verify-ca, verify-full)
DB_SSL_MODE=disable
# 最大空闲连接数
DB_MAX_IDLE_CONNS=10
# 最大开放连接数
DB_MAX_OPEN_CONNS=100
# 连接最大生存时间(分钟)
DB_CONN_MAX_LIFETIME=60m

# =================================================================
# Redis 配置
# =================================================================

# Redis 主机地址
REDIS_HOST=localhost
# Redis 端口
REDIS_PORT=6379
# Redis 密码 (如果没有密码则留空)
REDIS_PASSWORD=
# Redis 数据库索引
REDIS_DB=0
# Redis 连接池大小
REDIS_POOL_SIZE=10
# Redis 最小空闲连接数
REDIS_MIN_IDLE_CONNS=5
# Redis 连接超时时间(秒)
REDIS_DIAL_TIMEOUT=5s
# Redis 读取超时时间(秒)
REDIS_READ_TIMEOUT=3s
# Redis 写入超时时间(秒)
REDIS_WRITE_TIMEOUT=3s

# =================================================================
# JWT 配置
# =================================================================

# JWT 密钥 (生产环境请使用复杂的随机字符串)
JWT_SECRET=your-super-secret-jwt-key
# JWT 过期时间(小时)
JWT_EXPIRE_HOURS=24
# JWT 刷新令牌过期时间(小时)
JWT_REFRESH_EXPIRE_HOURS=168

# 密码加密专用密钥 (用于HMAC签名，必须保密)
PASSWORD_ENCRYPTION_KEY=your-ultra-secret-password-encryption-key
# 密码加密算法 (hmac-bcrypt, aes-gcm)
PASSWORD_ENCRYPTION_METHOD=hmac-bcrypt

# =================================================================
# 日志配置
# =================================================================

# 日志级别 (debug, info, warn, error, fatal)
LOG_LEVEL=debug
# 日志格式 (json, text)
LOG_FORMAT=json
# 日志输出 (stdout, file)
LOG_OUTPUT=stdout
# 日志文件路径 (当 LOG_OUTPUT=file 时使用)
LOG_FILE_PATH=./logs/app.log
# 日志文件最大大小(MB)
LOG_MAX_SIZE=100
# 日志文件最大备份数
LOG_MAX_BACKUPS=3
# 日志文件最大保存天数
LOG_MAX_AGE=30

# =================================================================
# 安全配置
# =================================================================

# CORS 允许的源 (多个用逗号分隔，* 表示允许所有)
CORS_ALLOWED_ORIGINS=*
# CORS 允许的方法
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
# CORS 允许的头部
CORS_ALLOWED_HEADERS=Origin,Content-Type,Accept,Authorization,X-Requested-With
# 是否允许发送Cookie
CORS_ALLOW_CREDENTIALS=true

# API 限流配置
# 每分钟允许的请求数
RATE_LIMIT_RPM=100
# 限流窗口大小(分钟)
RATE_LIMIT_WINDOW=1

# =================================================================
# 外部服务配置
# =================================================================

# 邮件服务配置 (如果需要)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@trusioo.com

# 对象存储配置 (如果需要)
S3_BUCKET=trusioo-bucket
S3_REGION=us-west-2
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key

# =================================================================
# 监控和健康检查配置
# =================================================================

# 健康检查间隔(秒)
HEALTH_CHECK_INTERVAL=30s
# 健康检查超时时间(秒)
HEALTH_CHECK_TIMEOUT=5s

# Prometheus 指标端口
METRICS_PORT=9090
# 是否启用指标收集
METRICS_ENABLED=true

# =================================================================
# 开发环境特定配置
# =================================================================

# 是否启用API文档
ENABLE_DOCS=true
# API文档路径
DOCS_PATH=/docs
# 是否启用性能分析
ENABLE_PPROF=true
# 性能分析端口
PPROF_PORT=6060

