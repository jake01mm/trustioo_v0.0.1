              "mode": "raw",
              "raw": "{}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/user/logout",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "user", "logout"]
            },
            "description": "用户登出，撤销当前令牌"
          },
          "response": []
        }
